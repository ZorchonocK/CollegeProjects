        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="968">
    <Grid Margin="0,0,10,-6">
        <DataGrid x:Name="array1Grid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,541,552"/>
        <DataGrid x:Name="array2Grid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="454,10,90,552"/>
