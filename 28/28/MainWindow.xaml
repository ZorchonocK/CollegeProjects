        <Button Content="Вычитание" HorizontalAlignment="Left" Margin="100,393,0,0" VerticalAlignment="Top" Click="Button_Click2"/>
        <Button Content="Умножение" HorizontalAlignment="Left" Margin="196,393,0,0" VerticalAlignment="Top" Click="Button_Click3"/>
        <Button Content="Сортировка 1 матрицы" HorizontalAlignment="Left" Margin="435,393,0,0" VerticalAlignment="Top" Click="Button_Click4"/>
        <Button Content="Сортировка 2 матрицы" HorizontalAlignment="Left" Margin="595,393,0,0" VerticalAlignment="Top" Click="Button_Click5"/>

        <Button Content="Умножить на число" HorizontalAlignment="Left" Margin="20,433,0,0" VerticalAlignment="Top" Click="Button_Click10"/>
        <Button Content="Транспонировать матрицу" HorizontalAlignment="Left" Margin="758,393,0,0" VerticalAlignment="Top" Click="Button_Click11"/>
        <TextBox x:Name="chislo" HorizontalAlignment="Left" Margin="170,435,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
